---
import { ArrowRight, ArrowUpRight, Menu } from './icons'
import { Button } from './ui/button'
---

<header
  id="header"
  class="sticky left-0 w-full z-30 top-0 bg-white backdrop-filter backdrop-blur-md bg-opacity-50 p-5"
>
  <div class="flex">
    <nav>
      <h1 class="text-3xl mb-0">
        <a href="/"> Logo </a>
      </h1>
    </nav>
    <div class="flex items-center ml-auto gap-5">
      <div class="flex">
        <div class="flex gap-4">
          <button
            type="button"
            class="block lg:hidden"
            aria-controls="navbar-dropdown"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <Menu />
          </button>
          <div class="z-20 hidden lg:flex">
            <nav class="flex gap-5 items-center">
              <a
                href="/#features"
                class="menu-item--link flex items-center"
                target="_self"
              >
                Features
              </a>
              <a
                href="/#testimonials"
                class="menu-item--link flex items-center"
                target="_self"
              >
                Feedback
              </a>
              <a
                href="/#faq"
                class="menu-item--link flex items-center"
                target="_self"
              >
                FAQ
              </a>
              <a
                href="https://chrstnl.com/"
                class="menu-item--link flex items-center"
                target="_blank"
              >
                Contact
                <span
                  class="ml-2 inline-block text-sm font-medium text-inherit"
                >
                  <ArrowUpRight />
                </span>
              </a>
            </nav>
          </div>
        </div>
      </div>
      <nav class="hidden md:block">
        <Button>
          Get Template
          <ArrowRight />
        </Button>
      </nav>
    </div>
  </div>
</header>
